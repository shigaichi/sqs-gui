{{/* layout: compose shared head/header/footer and inject page content */}}
{{define "layout"}}
<!DOCTYPE html>
<html lang="en">
  {{template "head" .}}
  <body class="flex min-h-screen flex-col bg-slate-100 text-slate-900 antialiased">
    {{template "siteHeader" .}}

    <main class="flex-1">
      <div class="mx-auto w-full max-w-6xl px-6 py-10">
        {{template "content" .}}
      </div>
    </main>

    {{template "siteFooter" .}}
  </body>
</html>
{{end}}
